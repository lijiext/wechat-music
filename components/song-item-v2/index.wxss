.item {
    display: flex;
    align-items: center;
    margin: 25rpx 0 10rpx;
}

.item-index {
    font-size: 30rpx;
    padding: 12rpx;
}

.item-detail {
    flex: 1;
    margin-left: 16rpx;
}

.item-detail .item-song-name {
    font-size: 30rpx;
    color: #333;
}

.item-detail .item-artist {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
}

.item-artist .icon{
    width: 38rpx;
    height: 22rpx;
    margin-right: 10rpx;
}
