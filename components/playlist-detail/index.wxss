.playlist-wrapper {
    padding: 0 20rpx;
}

.playlist-header {
    width: 100vw;
    position: relative;
    left: -20rpx;
    display: flex;
    flex-direction: column;
    height: 450rpx;
    color: #fff;
}

.playlist-header .header-image {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.playlist-header .header-mask {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
}

.playlist-desc {
    display: flex;
    margin-top: 60rpx;
    padding: 0 50rpx;
}

.playlist-desc .desc-image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 16rpx;
}

.playlist-desc .desc-info {
    position: relative;
    height: 220rpx;
    flex: 1;
    margin-left: 50rpx;
}

.playlist-desc .desc-creator {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}

.playlist-desc .desc-creator .creator-avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;

}

.playlist-desc .desc-creator .creator-name {
    margin-left: 18rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.playlist-desc .desc-abbr {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    margin-top: 30rpx;
    font-size: 24rpx;
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.playlist-action {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
    padding: 30rpx;
}

.playlist-action .action-item {
    display: flex;
    align-items: center;
}

.playlist-action .action-item .icon {
    width: 48rpx;
    margin-right: 10rpx;
}

.playlist-action .action-item .action-text {
    font-size: 24rpx;
    font-weight: bold;
}