<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="playlist-item">
    <view class="playlist-item-avatar">
        <image
                class="playlist-item-avatar-image"
                src="{{item.coverImgUrl}}"
                mode="widthFix">
        </image>
        <view class="playlist-item-avatar-mask">
            {{format.formatCount(item.playCount)}}
        </view>
    </view>
    <view class="playlist-item-description">
        {{item.name}}
    </view>
</view>