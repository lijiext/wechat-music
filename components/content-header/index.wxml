<!--components/content-header/index.wxml-->
<view class="header">
    <view class="title">{{title}}</view>
    <view class="right" wx:if="{{showRight}}" bindtap="showMore">
        <view class="slot">
            <slot></slot>
        </view>
        <view class="default">
            <text>{{subTitle}}</text>
            <image class="icon" src="/static/images/icons/arrow-right.png"></image>
        </view>
    </view>
</view>

