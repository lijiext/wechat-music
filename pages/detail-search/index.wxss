/* pages/detail-search/index.wxss */
page {
    padding: 0 10rpx 0 10rpx;
}

.search-hot-wrapper {
    padding: 10rpx 10rpx;
}

.search-hot-wrapper .search-hot-words {
    display: flex;
    flex-wrap: wrap;
}

.search-hot-words .tag {
    font-size: 26rpx;
    background-color: #fff;
    padding: 10rpx 12rpx;
    border-radius: 16rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.search-hot-wrapper .tag:first-of-type {
    color: #26ce8a;
}


.suggest-wrapper {
    padding: 20rpx 30rpx;
}

.suggest-wrapper .suggest-title {
    font-size: 34rpx;
    color: #26ce8a;
    font-weight: 700;
}

.suggest-item {
    display: flex;
    align-items: center;
    margin-top: 16rpx;
}

.suggest-icon {
    width: 66rpx;
    margin-left: -20rpx;
}

.suggest-text {
    font-size: 28rpx;
}

